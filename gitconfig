[alias]
  ci = commit
  co = checkout
  di = diff
  st = status -sb
  ann = annotate
  b = branch
  l = log --topo-order --graph --pretty='%h %C(red)%an%Creset %s %C(yellow)%ar %C(green)%d%Creset'
  c = log --topo-order         --pretty='%h %C(red)%an%Creset %s %C(yellow)%ar %C(green)%d%Creset'
  f = fetch -p # -pt --all
  up = "! git pull --rebase"

[push]
  default = current

[pull]
  rebase = true

[rebase]
  stat = true

[diff]
  renames = true

[color]
  ui = true
[color "branch"]
  current = cyan
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

