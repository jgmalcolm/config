setenv TERM xterm-256color
autodetach            on
hardcopydir           /tmp/
startup_message       off
vbell                 off             # default: ???
defscrollback         20000
silencewait           15              # default: 30

hardstatus alwayslastline "%{.kw}%-w%{.rW}%n %t%{-}%+w %=%{g} %H %{y} %d %M %C%a "
altscreen on

#screen -t top   9 nice -20 htop -d 300
screen -t top   9 nice -20 top -d 30
screen -t emacs 0 /usr/bin/env TERM=xterm-256color emacs -nw
screen 1
